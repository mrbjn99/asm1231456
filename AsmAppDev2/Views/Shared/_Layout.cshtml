<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fpt Training System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fpt System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Role", "Index", "Roles")</li>
                        <li>@Html.ActionLink("Manage User", "Index", "Admins")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Staff"))
                    {
                        <li>@Html.ActionLink("Course", "Index", "Courses")</li>
                        <li>@Html.ActionLink("Category", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Topic", "Index", "Topics")</li>
                        <li>@Html.ActionLink("View User", "Index", "StaffViewModels")</li>
                        <li>@Html.ActionLink("Trainee Course", "Index", "AssignTraineetoCourses")</li>
                        <li>@Html.ActionLink("Trainer Topic", "Index", "AssignTrainertoTopics")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Trainee"))
                    {
                        <li>@Html.ActionLink("Course", "Index", "Courses")</li>
                        <li>@Html.ActionLink("Category", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Trainee Course", "Index", "AssignTraineetoCourses")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Trainer"))
                    {
                        <li>@Html.ActionLink("Topic", "Index", "Topics")</li>
                        <li>@Html.ActionLink("Trainer Topic", "Index", "AssignTrainertoTopics")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fpt Training System </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
