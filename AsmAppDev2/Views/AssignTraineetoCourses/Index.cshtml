@model IEnumerable<AsmAppDev2.Models.AssignTraineetoCourse>
@{
    ViewBag.Title = "Index";
}

<h2>Trainee Course</h2>
@if (User.IsInRole("Staff"))
{
    <p>@Html.ActionLink("Assign Trainee to Course", "Create", null, new { id = "OT", style = "color: Red" })</p>

    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="Index">
            <thead>
                <tr>
                    <th>Trainee</th>
                    <th>Course</th>
                    <th>Delete</th>
                </tr>

                @foreach (var assign in Model)
                {
                    <tr>
                        <td>@assign.Trainee.Email</td>
                        <td>@assign.Course.Name_Course</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = assign.ID })</td>
                    </tr>
                }
        </table>
    </div>
        }
        @if (User.IsInRole("Trainee"))
        {
<div class="panel-body">
    <table class="table table-hover table-bordered table-condensed" id="Index">
        <thead>
            <tr>
                <th>Trainee</th>
                <th>Courses</th>
            </tr>

            @foreach (var assign in Model)
            {
                <tr>
                    <td>@assign.Trainee</td>
                    <td>@assign.Course.Name_Course</td>
                </tr>
            }
    </table>
</div>
    }
    @Html.ActionLink("Back to home", "Index", "Home")
