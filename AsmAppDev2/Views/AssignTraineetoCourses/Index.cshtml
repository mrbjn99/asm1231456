@model IEnumerable<AsmAppDev2.Models.AssignTraineetoCourse>
@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Staff"))
{
<p>@Html.ActionLink("Assign Trainee to Course", "Create")</p>
}
<table class="table">
	<tr>
		<th>Trainee</th>
		<th>Course</th>
	</tr>

	@foreach (var assign in Model)
	{
<tr>
	<td>@assign.Trainee.UserName</td>
	<td>@assign.Course.Name_Course</td>

	<td>@Html.ActionLink("Delete", "Delete", new { id = assign.Trainee.UserName })</td>
</tr>
	}
</table>
