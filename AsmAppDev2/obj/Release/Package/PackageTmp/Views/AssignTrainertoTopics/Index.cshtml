@model IEnumerable<AsmAppDev2.Models.AssignTrainertoTopic>
@{
	ViewBag.Title = "Index";
}
<h2>Index</h2>
	<p>@Html.ActionLink("Assign Trainer to Topic", "Create", null, new { id = "OT", style = "color: Red" })</p>

    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="Index">
            <thead>
                <tr>
                    <th>Trainer</th>
                    <th>Topic</th>
                    <th>Delete</th>
                </tr>

                @foreach (var assign in Model)
                {
                    <tr>
                        <td>@assign.Trainer.UserName</td>
                        <td>@assign.Topic.Name_Topic</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = assign.ID })</td>
                    </tr>
                }
        </table>
    </div>
