@model AsmAppDev2.ViewModels.AssignTrainertoTopicViewModels
@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
<div class="form-horizontal">
	<h4>Assign Trainee</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(assign => assign.assignTrainertoTopics.TrainerID)
		@Html.DropDownListFor(assign => assign.assignTrainertoTopics.TrainerID, new SelectList(Model.Trainers, "Id", "UserName"), new { @class = "form-control" })
		@Html.ValidationMessageFor(assign => assign.assignTrainertoTopics.TrainerID, "", new { @class = "text-danger" })
	</div>


	<div class="form-group">
		@Html.LabelFor(assign => assign.assignTrainertoTopics.TopicID)
		@Html.DropDownListFor(assign => assign.assignTrainertoTopics.TopicID, new SelectList(Model.Topics, "Id", "Name_Topic"), new { @class = "form-control" })
		@Html.ValidationMessageFor(assign => assign.assignTrainertoTopics.TopicID, "", new { @class = "text-danger" })
	</div>
</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Assign" class="btn btn-default" />
		</div>
	</div>
}
<div>
	@Html.ActionLink("Back to List", "Index")
</div>