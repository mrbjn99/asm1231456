@model AsmAppDev2.ViewModels.AssignTraineetoCourseViewModels
@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<h4>Assign Trainee</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(assign => assign.AssignTraineetoCourses.TraineeID)
			@Html.DropDownListFor(assign => assign.AssignTraineetoCourses.TraineeID, new SelectList(Model.Trainees, "Id", "UserName"), new { @class = "form-control" })
			@Html.ValidationMessageFor(assign => assign.AssignTraineetoCourses.TraineeID, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(assign => assign.AssignTraineetoCourses.CourseID)
			@Html.DropDownListFor(assign => assign.AssignTraineetoCourses.CourseID, new SelectList(Model.Courses, "Id", "Name_Course"), new { @class = "form-control" })
			@Html.ValidationMessageFor(assign => assign.AssignTraineetoCourses.CourseID, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Assign" class="btn btn-default" />
		</div>
	</div>
}
<div>
	@Html.ActionLink("Back to List", "Index")
</div>
