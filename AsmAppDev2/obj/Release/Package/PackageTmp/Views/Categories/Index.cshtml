@model IEnumerable<AsmAppDev2.Models.Category>
@{
	ViewBag.Title = "Index";
}

<h2>Categories</h2>
@if (User.IsInRole("Staff"))
{
	<p>@Html.ActionLink("Create New Category", "Create")</p>
}
<table class="table">
	<tr>
		<th>Name Category</th>
		<th>Description</th>
	</tr>

	@foreach (var category in Model)
	{
<tr>
	<td>@category.Name_Category</td>
	<td>@category.Description</td>

	@if (User.IsInRole("Staff"))
	{
		<td>@Html.ActionLink("Edit", "Edit", new { id = category.ID })</td>
		<td>@Html.ActionLink("Delete", "Delete", new { id = category.ID })</td>
	}
	<td>@Html.ActionLink("Details", "Details", new { id = category.ID })</td>

</tr>
	}
</table>