@model AsmAppDev2.ViewModels.StaffViewModels
@{
	ViewBag.Title = "Index";
}

<h3>Trainee</h3>
@Html.ActionLink("Create new trainee account","Register","Account")
<div class="panel-body">
	<table class="table table-hover table-bordered table-condensed" id="Index">
		<thead>
			<tr>
				<td><b>UserName</b></td>
				<td><b>Email</b></td>
				<td><b>Roles</b></td>
				<td><b></b></td>
				<td><b></b></td>
			</tr>
		</thead>
		@foreach (var user in Model.Trainee)
		{
			<tr>
				<td>@user.UserName </td>
				<td>@user.Email</td>
				<td>@user.RoleName</td>
				<td>@Html.ActionLink("Edit", "Edit", "Trainees", new { id = user.UserID }, null)</td>
				<td>@Html.ActionLink("Delete", "Delete", "Trainers", new { id = user.UserID }, null)</td>
			</tr>
		}
	</table>
</div>
